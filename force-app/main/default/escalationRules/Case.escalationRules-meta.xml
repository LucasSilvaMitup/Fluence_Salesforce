<?xml version="1.0" encoding="UTF-8"?>
<EscalationRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <escalationRule>
        <fullName>Case Escalation Rules</fullName>
        <active>true</active>
        <ruleEntry>
            <businessHours>Central US Time</businessHours>
            <businessHoursSource>Static</businessHoursSource>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>New</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Commissioning</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.CountDays__c</field>
                <operation>greaterThan</operation>
                <value>5</value>
            </criteriaItems>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToTemplate>unfiled$public/Case_Reassigned_to_Escalation_Mgr</assignedToTemplate>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>30</minutesToEscalation>
                <notifyCaseOwner>true</notifyCaseOwner>
                <notifyToTemplate>unfiled$public/Commissioning_Case_New_for_5_days</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>30</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
                <notifyTo>barbara.neves@biz2people.com</notifyTo>
                <notifyToTemplate>unfiled$public/Case_To_Be_Reassigned</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>AND($RecordType.Id=&quot;0122E000000iFFKQA2&quot;,ISBLANK(Date_visited__c), TODAY()&gt; Customer_Requested_Ship_date__c	 )</formula>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>30</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
                <notifyTo>barbara.neves@biz2people.com</notifyTo>
                <notifyToTemplate>unfiled$public/Case_To_Be_Reassigned</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>AND($RecordType.Id=&quot;0122E000000iFFKQA2&quot;,TODAY()-Date_visited__c&gt;5,NOT(ISPICKVAL(Status,&quot;Complete&quot;)),NOT(ISPICKVAL(Status,&quot;Closed&quot;)))</formula>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>AND($RecordType.Id=&quot;0122E000000iFFKQA2&quot;,TODAY()-Date_visited__c&gt;7,NOT(ISPICKVAL(Status,&quot;Closed&quot;)))</formula>
        </ruleEntry>
        <ruleEntry>
            <businessHours>Central US Time</businessHours>
            <businessHoursSource>Static</businessHoursSource>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>RARF</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>New</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.OwnerId</field>
                <operation>equals</operation>
                <value>RARF Queue</value>
            </criteriaItems>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToTemplate>unfiled$public/Case_To_Be_Reassigned</assignedToTemplate>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>1080</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToTemplate>unfiled$public/Case_To_Be_Reassigned</assignedToTemplate>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>1080</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>AND(ISPICKVAL(Status, &quot;FAE Review&quot;),RecordType.DeveloperName = &apos;LDRF&apos;)</formula>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToTemplate>unfiled$public/Case_To_Be_Reassigned</assignedToTemplate>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>1080</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>AND(ISPICKVAL(Status,&quot;Submitted&quot;), RecordType.DeveloperName = &apos;LDRF&apos;)</formula>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToTemplate>unfiled$public/Case_To_Be_Reassigned</assignedToTemplate>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>1620</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>AND(ISPICKVAL(Status, &quot;In Progress&quot;),RecordType.DeveloperName = &apos;LDRF&apos;)</formula>
        </ruleEntry>
        <ruleEntry>
            <businessHours>Central US Time</businessHours>
            <businessHoursSource>Static</businessHoursSource>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>General</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>New</value>
            </criteriaItems>
            <escalationAction>
                <minutesToEscalation>1320</minutesToEscalation>
                <notifyCaseOwner>true</notifyCaseOwner>
                <notifyToTemplate>unfiled$public/General_Case_ESCALATION_Assigned_Not_Started</notifyToTemplate>
            </escalationAction>
            <escalationAction>
                <minutesToEscalation>1560</minutesToEscalation>
                <notifyCaseOwner>true</notifyCaseOwner>
                <notifyTo>ginger.brown@fluencebioengineering.com</notifyTo>
                <notifyToTemplate>unfiled$public/General_Case_ESCALATION_Assigned_Not_Started_2</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
        </ruleEntry>
        <ruleEntry>
            <businessHours>Central US Time</businessHours>
            <businessHoursSource>Static</businessHoursSource>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>General</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>Open</value>
            </criteriaItems>
            <escalationAction>
                <minutesToEscalation>1560</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
                <notifyTo>ginger.brown@fluencebioengineering.com</notifyTo>
                <notifyToTemplate>unfiled$public/General_Case_ESCALATION_Assigned_Case_is_Open</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
        </ruleEntry>
        <ruleEntry>
            <businessHoursSource>Case</businessHoursSource>
            <escalationAction>
                <assignedTo>christopher.bezuyen@fluencebioengineering.com</assignedTo>
                <assignedToTemplate>unfiled$public/General_Case_ESCALATION_Assigned_On_FAE_Queue</assignedToTemplate>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>1440</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
            <formula>AND( 				                 RecordType.DeveloperName = &apos;General&apos;, 				 				OR( 								OwnerId = $Label.FAE_APAC_Australia_Queue, 								OwnerId = $Label.FAE_AR_Queue, 								OwnerId = $Label.FAE_APAC_Queue, 								OwnerId = $Label.FAE_Cannabis_Queue, 								OwnerId = $Label.FAE_Comm_Ag_Queue, 								OwnerId = $Label.FAE_EMEA_Queue, 								OwnerId = $Label.FAE_Queue 				) )</formula>
        </ruleEntry>
    </escalationRule>
</EscalationRules>
