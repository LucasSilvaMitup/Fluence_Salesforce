<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_LDRF_Case_FAEReviewClosed</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL(Status,&quot;Closed&quot;),ISCHANGED(Status),!Is_FAE_Review_complete__c)</errorConditionFormula>
    <errorDisplayField>Is_FAE_Review_complete__c</errorDisplayField>
    <errorMessage>Before close the case, select one of the FAE review checkboxes</errorMessage>
</ValidationRule>
